<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tandori Momos"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textvi2"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textvi"
            android:text="In veg wood fired thin momos"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="45dp"
            android:layout_height="37dp"
            android:layout_below="@+id/tview"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tview"
            android:layout_marginStart="50dp"
            android:text="4.5"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textvi2"
            android:text="Rs.90"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="207dp"
            android:layout_height="122dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder" />


        <Button
            android:id="@+id/add"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:layout_marginStart="300dp"
            android:layout_marginTop="-4dp"
            android:background="@drawable/localeats"
            android:text="Add" />

        <RelativeLayout
            android:id="@+id/lytAdd"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add"
            android:layout_alignParentRight="true"
            android:visibility="gone">


            <ImageView
                android:id="@+id/minus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/minus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/plus"
                android:layout_toRightOf="@+id/minus"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/plus" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>